
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isVerified() {
        return request.auth.token.email_verified == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Products: Allow public read, but restrict write access.
    // In a real app, you would restrict write access to admin/owner roles.
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // For now, nobody can write to products from the client.
    }

    // Users: Users can create their own profile and read/write to it IF their email is verified.
    // They cannot read other users' profiles or delete their own profile.
    match /users/{userId} {
      allow read, update: if isVerified() && isOwner(userId);
      // Allow creation during signup, but subsequent actions require verification.
      allow create: if isSignedIn();
      allow delete: if false;
      
      // Prevent listing all users
      allow list: if false;

      // Cart: Users can read and write to their own cart subcollection.
      match /cart/{productId} {
        allow read, write, delete: if isOwner(userId);
      }
    }
    
    // Quotes: Users can create their own quote requests and read them.
    // Admins (in a real app) would have broader read/write access.
    match /quotes/{quoteId} {
      allow create: if isSignedIn();
      allow read: if isOwner(request.resource.data.userId);
      // Only admins should be able to list all quotes or update/delete them.
      allow list, update, delete: if false; 
    }
  }
}

    