
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isVerified() {
        return request.auth.token.email_verified == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // In a real app, you would lock this down to specific admin UIDs
    function isAdmin() {
        // For now, any signed-in user can be an "admin" for testing purposes.
        // In production, you would check for a custom claim:
        // return request.auth.token.admin == true;
        return isSignedIn();
    }
    
    // Products: Allow public read, but restrict write access to admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users: Users can create their own profile and read/write to it IF their email is verified.
    // They cannot read other users' profiles or delete their own profile.
    match /users/{userId} {
      allow read, update: if isVerified() && isOwner(userId);
      // Allow creation during signup, but subsequent actions require verification.
      allow create: if isSignedIn();
      allow delete: if false;
      
      // Admins can read user profiles, but not list all of them for security.
      allow get: if isAdmin();
      allow list: if false;

      // Cart: Users can read and write to their own cart subcollection.
      match /cart/{productId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // Orders: Users can read their own orders and their items.
      match /orders/{orderId} {
        allow read, create: if isOwner(userId);
        
        match /items/{itemId} {
           allow read, create: if isOwner(userId);
        }
      }
    }
    
    // Quotes: Users can create their own quote requests and read them.
    match /quotes/{quoteId} {
      allow create: if isSignedIn();
      allow read: if isOwner(request.resource.data.userId) || isAdmin();
      allow update: if isAdmin(); // Admins can update quotes (e.g., to add pricing)
      // Only admins should be able to list all quotes or delete them.
      allow list, delete: if isAdmin(); 
    }

    // Transactions: Only admins can read and create transactions.
    match /transactions/{transactionId} {
        allow read, write: if isAdmin();
    }

    // Collection Group Queries
    // Allow admins to query orders across all users.
    match /{path=**}/orders/{orderId} {
      allow list: if isAdmin();
    }
  }
}
