
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isVerified() {
        return request.auth.token.email_verified == true;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Check for a custom claim `role` on the user's auth token.
    // This claim must be set via the Firebase Admin SDK.
    function hasRole(role) {
        return request.auth.token.role == role;
    }

    // Admin roles are 'Owner' or 'Content Manager'
    function isAdmin() {
        return hasRole('Owner') || hasRole('Content Manager');
    }
    
    // The highest privilege, only for the 'Owner'
    function isOwnerRole() {
        return hasRole('Owner');
    }

    // Products: Allow public read, but restrict write access to admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();

      // Reviews: Allow any verified, signed-in user to create a review.
      // Do not allow updates or deletes to maintain integrity.
      // An owner can delete reviews if necessary.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn() && isVerified();
        allow update: if false;
        allow delete: if isOwnerRole();
      }
    }

    // Users: Users can read/update their own profile. Only Owners can manage all users.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      // Allow creation during signup.
      allow create: if isSignedIn();
      // Only the Owner can delete user profiles.
      allow delete: if isOwnerRole();
      
      // Admins can get a specific user's profile, but not list all of them.
      allow get: if isAdmin();
      // Listing all users is restricted for security, even for admins,
      // unless they are the Owner.
      allow list: if isOwnerRole();

      // Cart: Users can read and write to their own cart subcollection.
      match /cart/{productId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // Orders: Users can create and read their own orders and their items.
      match /orders/{orderId} {
        allow read, create: if isOwner(userId);
        
        match /items/{itemId} {
           allow read, create: if isOwner(userId);
        }
      }
    }
    
    // Quotes: Users can create their own quote requests. Admins can read/update them.
    match /quotes/{quoteId} {
      allow create: if isSignedIn();
      allow read: if isOwner(request.resource.data.userId) || isAdmin();
      allow update: if isAdmin(); // Admins can update quotes (e.g., to add pricing)
      // Only admins should be able to list all quotes or delete them.
      allow list, delete: if isAdmin(); 
    }

    // Transactions: Only admins can read and write transactions.
    match /transactions/{transactionId} {
        allow read, write: if isAdmin();
    }
    
    // Testimonials: Public read, admin write
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Conversations: Users can access their own conversation, Admins can access all.
    match /conversations/{conversationId} {
      // isOwner check ensures user can only manage their own conversation document
      allow get, create, update: if isOwner(conversationId);
      allow list, read, write: if isAdmin();

      // Messages: Users can write to their own conversation, Admins can write to any.
      match /messages/{messageId} {
        allow read, create: if isOwner(conversationId) || isAdmin();
      }
    }

    // Purchase Orders: Only admins can manage POs.
    match /purchaseOrders/{purchaseOrderId} {
        allow read, write: if isAdmin();
        
        match /items/{itemId} {
            allow read, write: if isAdmin();
        }
    }

    // Collection Group Queries
    // Allow admins to query orders across all users.
    match /{path=**}/orders/{orderId} {
      allow list: if isAdmin();
    }
  }
}
